/dts-v1/;
#include "mt7621.dtsi"

/ {
	model = "MediaTek MT7621 reference board";
	compatible = "mediatek,mt7621-rfb", "mediatek,mt7621-soc";

	aliases {
		spi0 = &spi;
	};

	chosen {
		stdout-path = &uartlite0;
	};
};

&pinctrl {
	state_default: pinmux_conf {
		spi {
			groups = "spi";
			function = "spi";
		};

		sdhci {
			groups = "sdhci";
			function = "gpio";
		};

		jtag {
			groups = "jtag";
			function = "gpio";
		};

		wdt {
			groups = "wdt";
			function = "gpio";
		};

		rgmii2 {
			groups = "rgmii2";
			function = "gpio";
		};
	};
};

&gpio {
	status = "okay";
};

&i2c {
	gpios = <&gpio 3 1>, /* PIN3 as SDA */
		<&gpio 4 1>; /* PIN4 as CLK */
	status = "disabled";
};

&spi {
	spi-max-frequency = <25000000>;
	status = "okay";

	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-flash";
		spi-max-frequency = <25000000>;
		reg = <0>;
	};
};

&uartlite0 {
	status = "okay";
};

&eth {
	status = "okay";
};

&xhci {
	status = "okay";
};
